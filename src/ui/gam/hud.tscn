[sub_resource type="Shader" id="Shader_vignette"]
code = "shader_type canvas_item;

uniform float intensity : hint_range(0.0, 1.0) = 0.0;
uniform vec4 pain_color : source_color = vec4(0.8, 0.0, 0.0, 1.0);

void fragment() {
	vec2 uv = UV;
	vec2 center = vec2(0.5, 0.5);
	float dist = distance(uv, center);
	
	// Create vignette shape (edges darker)
	float vignette = smoothstep(0.2, 0.8, dist);
	
	// Apply pain effect with intensity
	float alpha = vignette * intensity * 0.8;
	COLOR = vec4(pain_color.rgb, alpha);
}
"

